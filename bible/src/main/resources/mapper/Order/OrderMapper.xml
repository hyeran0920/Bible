<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.library.bible.order.mapper.OrderMapper">

    <!-- 주문 데이터 삽입 -->
    <insert id="insertOrder">
        INSERT INTO orders (book_id, selling_price, book_count, total_price)
        VALUES (#{bookId}, #{sellingPrice}, #{bookCount}, #{totalPrice})
    </insert>

    <!-- 특정 회원의 주문 목록 조회 -->
    <select id="getOrdersByMemId" resultType="com.library.bible.order.OrderPageItemDTO">
    SELECT * FROM ORDERS WHERE MEM_ID = #{memId}
    </select>

</mapper>
